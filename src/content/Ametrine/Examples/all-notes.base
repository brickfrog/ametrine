views:
  - type: table
    name: All Notes
    order:
      - file.name
      - file.tags
      - file.mtime
  - type: table
    name: Recent Updates
    order:
      - file.name
      - file.mtime
      - file.tags
    limit: 20
  - type: table
    name: Guides Only
    filters:
      and:
        - file.hasTag("guide")
    order:
      - file.name
      - description
      - file.mtime
