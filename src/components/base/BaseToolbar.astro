---
import type { BaseView } from '../../utils/bases/types';
import ViewSelector from './ViewSelector.astro';

interface Props {
  views: BaseView[];
  currentView: BaseView;
  baseName: string;
  resultCount: number;
}

const { views, currentView, baseName, resultCount } = Astro.props;
---

<div class="base-toolbar">
  <div class="toolbar-left">
    <ViewSelector views={views} currentView={currentView} baseName={baseName} />
  </div>

  <div class="toolbar-right">
    <span class="result-count">{resultCount} {resultCount === 1 ? 'result' : 'results'}</span>
  </div>
</div>

<style>
  .base-toolbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 36px;
    padding: 0 12px;
    background: var(--color-light);
    border-bottom: 1px solid var(--color-lightgray);
  }

  .toolbar-left {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .toolbar-right {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .result-count {
    font-size: 0.8125rem;
    color: var(--color-gray);
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .base-toolbar {
      padding: 0 8px;
    }

    .toolbar-left {
      gap: 6px;
    }
  }
</style>
