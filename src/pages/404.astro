---
import BaseLayout from '../layouts/BaseLayout.astro';

const homeHref = import.meta.env.BASE_URL ?? "/";
---

<BaseLayout title="404 - Page Not Found">
  <div class="flex min-h-screen bg-theme-light items-center justify-center">
    <div class="max-w-2xl mx-auto px-8 py-12 text-center">
      <article class="prose prose-lg dark:prose-invert max-w-none">
        <h1 class="text-9xl font-bold text-theme-secondary mb-4">404</h1>
        <h2 class="text-3xl font-semibold text-theme-dark mb-4">Page Not Found</h2>
        <p class="text-lg text-theme-darkgray mb-8">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <a
          href={homeHref}
          class="inline-block px-6 py-3 bg-theme-secondary text-theme-light rounded-lg hover:bg-theme-tertiary transition-colors font-medium"
        >
          Return Home
        </a>
      </article>
    </div>
  </div>
</BaseLayout>
