---
import { getPublishedNotes } from '../../utils/filterNotes';
import ContentLayout from '../../layouts/ContentLayout.astro';

const notes = await getPublishedNotes();

// Build a map of tag -> notes count
const tagMap = new Map<string, number>();

notes.forEach((note) => {
  const tags = note.data.tags || [];
  tags.forEach((tag) => {
    tagMap.set(tag, (tagMap.get(tag) || 0) + 1);
  });
});

// Sort tags alphabetically
const sortedTags = Array.from(tagMap.entries()).sort((a, b) =>
  a[0].localeCompare(b[0])
);
---

<ContentLayout title="All Tags" description="Browse all tags in this digital garden" slug="tags">
  <div class="space-y-6">
    <div class="border-b border-theme-gray pb-4">
      <p class="text-theme-darkgray">
        {sortedTags.length} {sortedTags.length === 1 ? 'tag' : 'tags'} total
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {sortedTags.map(([tag, count]) => (
        <a
          href={`/tags/${tag}`}
          class="block p-4 rounded-lg border border-theme-gray hover:border-theme-secondary hover:bg-theme-highlight transition-all"
        >
          <div class="flex items-center justify-between">
            <span class="text-lg font-semibold font-header text-theme-dark">
              #{tag}
            </span>
            <span class="text-sm text-theme-darkgray">
              {count} {count === 1 ? 'note' : 'notes'}
            </span>
          </div>
        </a>
      ))}
    </div>
  </div>
</ContentLayout>
